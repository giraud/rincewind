{
  "name": "rincewind-ocaml",
  "version": "0.1.0",
  "description": "OCaml workflow with Esy",
  "license": "MIT",
  "scripts": {
    "package": "esy build&& esy cp \"#{self.target_dir}/default/bin/rincewind.exe\" out/rincewind.exe",
    "test": "esy x rincewind"
  },
  "esy": {
    "build": "dune build -p #{self.name}",
    "release": {
      "bin": "rincewind",
      "includePackages": [
        "root",
        "@opam/camomile"
      ]
    }
  },
  "dependencies": {
    "@opam/dune": "*",
    "ocaml": "~4.02.3"
  },
  "devDependencies": {
    "ocaml": "~4.02.3"
  }
}